      <tr>
        <td><%= product.title %></td>
        <td><%= link_to image_tag(product.image.url) %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= link_to 'Show', admin_product_path(product) %></td>
        <td><%= link_to 'Edit', edit_admin_product_path(product) %></td>
